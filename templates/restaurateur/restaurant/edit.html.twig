{% extends 'base.html.twig' %}

{% block title %}Editer un restaurant{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/admin/adminForm.css') }}" />
{% endblock %}

{% block body %}

    <div class="container pt-5">
        <div class="row">
            <div class="col-12">

                <div class="d-flex justify-content-between">
                    <h1>Editer restaurant : {{restaurant.name}}</h1>
                    {{ include('/restaurateur/restaurant/_delete_form.html.twig') }}
                </div>
                
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('restaurateur.dashboard') }}">Tableau de Bord</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('restaurateur.restaurant.all')}}">Liste des Restaurants</a></li>
                    <li class="breadcrumb-item active">Editer restaurant {{restaurant.name}}</li>
                </ol>
                
                <div class="cart">
                    {{ include('/restaurateur/restaurant/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                
            </div>
        </div>
    </div>
    
{% endblock %}
