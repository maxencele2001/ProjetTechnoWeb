{% extends 'base.html.twig' %}

{% block title %}Tableau de bords{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous"/>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}" />
{% endblock %}


{% block body %}


<div class="number">

    <div class="container-fluid">
        <div class="row">
       
            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(250, 188, 9, 0.1)">
                            <center><i class="fa fa-euro-sign" style="color:#fabc09"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Chiffre d'affaire : {{restaurateur.balance}} €
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('dashboard.order') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                            <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Commandes totales : {{ orderLivre | length + orderEncours | length }}
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('dashboard.order.progress') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                            <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Commande en cours : {{orderEncours | length }} 
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('dashboard.order.delivered') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                            <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Commande livré : {{orderLivre | length }} 
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>         

            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('restaurant_index') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(22, 160, 133, 0.1)">
                            <center><i class="fa fa-utensils" style="color:#16A085"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Nombre de restaurants : {{restaurants | length}}
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>
             <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('users_index') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(213, 15, 37, 0.1)">
                            <center><i class="fa fa-users" style="color:#d50f25"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Nombre d'utilisateurs : {{users | length - 1 }} 
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-3 col-sm-4">
                <div class="wrimagecard wrimagecard-topimage">
                    <a href="{{ path('type_index') }}">
                        <div class="wrimagecard-topimage_header" style="background-color: rgba(130, 93, 9, 0.1)">
                            <center><i class="fa fa-align-justify" style="color:#825d09"></i></center>
                        </div>
                        <div class="wrimagecard-topimage_title">
                            <h4>Nombre de type : {{types | length}}
                            <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                        </div>
                    </a>
                </div>
            </div>


        </div>
    </div>

</div>



{% endblock %}