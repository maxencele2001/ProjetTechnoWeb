{% extends 'base.html.twig' %}

{% block title %}Restaurants{% endblock %}


{% block body %}

    <div class="container pt-5">
        <div class="row">
            <div class="col-12">

                <h1>{{title}}</h1> 
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin.dashboard') }}">Tableau de Bord</a></li>
                    <li class="breadcrumb-item active">Historique de commande</li>
                </ol>

                {% for order in orders %}
                    <div class="cart shadow p-3 mb-5 bg-white rounded">
                        <div class="cart-content p-4">
                            <div class="d-flex justify-content-around">
                                <div class="id">#{{ order.id }}</div>
                                <div class="date"><b>Date :</b> {{ order.orderedAt | date('Y-m-d H:i:s') }}</div>
                                <div class="user"><b>User :</b> {{ order.user.name }} {{ order.user.firstName }}</div>
                                <div class="restaurant"><b>Restaurant :</b> {{ order.restaurant.name }}</div>
                                <div class="price"><b>Prix Total :</b> {{ order.priceTotal}}â‚¬</div>
                            </div>
                        </div>
                    </div>        
                {% else %}
                    <div class="cart shadow p-3 mb-5 bg-white rounded">
                        <div class="cart-content p-4">
                        {{empty}}
                        </div>
                    </div>        
                {% endfor %}
        
            </div>
        </div>
    </div>

{% endblock %}
