{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}" />
{% endblock %}


{% block body %}

    <div class="number">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(250, 188, 9, 0.1)">
                                <center><i class="fa fa-euro-sign" style="color:#fabc09"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Chiffre d'affaire : {{restaurateur.balance}} €
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                                <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Commandes totales : {{ orderLivre | length + orderEncours | length }}
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                                <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Commande en cours : {{orderEncours | length }} 
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(51, 105, 232, 0.1)">
                                <center><i class="fa fa-shopping-cart" style="color:#3369e8"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Commande livré : {{orderLivre | length }} 
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>  
                
                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="{{ path('profil.show') }}">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(213, 15, 37, 0.1)">
                                <center><i class="fa fa-users" style="color:#d50f25"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Profil : {{user.name}} {{user.firstName}}
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-3 col-sm-4">
                    <div class="wrimagecard wrimagecard-topimage">
                        <a href="{{ path('restaurateur.restaurant.all') }}">
                            <div class="wrimagecard-topimage_header" style="background-color: rgba(22, 160, 133, 0.1)">
                                <center><i class="fa fa-utensils" style="color:#16A085"></i></center>
                            </div>
                            <div class="wrimagecard-topimage_title">
                                <h4>Nombre de restaurants : {{restaurants | length}}
                                <div class="pull-right badge" id="WrThemesIcons"></div></h4>
                            </div>
                        </a>
                    </div>
                </div>
            
            </div>
        </div>
    </div>
    
{% endblock %}