{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="jumbotron">
    <h1>MON PANIER</h1>
</div>

<div class="container">

    {% if items | length > 0 %}
       
        <section>
        
            <div class="row">
                
                <div class="col-lg-8">
            
                    <div class="mb-3 shadow p-3 mb-5 bg-white rounded">
                        <div class="pt-4 wish-list">

                        <h5 class="mb-4">Commande (<span>{{items | length}}</span> plats)</h5>
                        {% for item in items %}
                            <div class="row mb-4">
                                <div class="col-md-5 col-lg-3 col-xl-3 ">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100" src="{{ asset('uploads/' ~ item.plat.image) }}" alt="{{ item.plat.name }}">
                                </div>
                                </div>
                                <div class="col-md-7 col-lg-9 col-xl-9">
                                    <div>
                                        <div class="d-flex justify-content-between">
                                        <div>
                                            <h5>{{ item.plat.name }}</h5>
                                            <p class="mb-3 text-muted text-uppercase small">{{ item.plat.price }} €</p>
                                        </div>
                                        <div>
                                             <a href="{{path('cart.rem1', {'id': item.plat.id})}}" class="btn btn-warning btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                                                    <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                                </svg>
                                            </a>
                                              <input class="quantity" readonly min="0" name="quantity" class="form-control"  value={{item.quantity}}>
                                            <a href="{{path('cart.add1', {'id': item.plat.id})}}" class="btn btn-warning btn-sm">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                                </svg>
                                            </a>        
                                            
                                        </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a href="{{path('cart.remove', {'id': item.plat.id})}}" type="button" class="rdca-link-secondary small text-uppercase mr-3" style="color:red;">
                                            <i class="fas fa-trash-alt mr-1"></i>Supprimer</a>
                                        </div>
                                        
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="mb-4">
                        
                        {% endfor %}
                        
                        </div>
                    </div>
            

                </div>               
                
                <div class="col-lg-4">
                
                    <div class="mb-3 shadow p-3 mb-5 bg-white rounded">
                        <div class="pt-4">

                            <h5 class="mb-3">Total</h5>

                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Coût des plats
                                <span>{{ total }}</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Livraison
                                <span>2,5€</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Coût total</strong>
                                </div>
                                <span><strong>{{ total + 2.5 }}€</strong></span>
                                </li>
                            </ul>

                            <button type="button" class="btn btn-warning btn-block"><a href="{{path('cart.order')}}" style="color:white;">Je commande !</a></button>

                        </div>
                    </div>

                </div>
                

            </div>
        
        </section>       


    {% endif %}
</div>
{% endblock %}