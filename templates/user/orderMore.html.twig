{% extends 'base.html.twig' %}

{% block title %}Détails d'une commande{% endblock %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}" />
    
{% endblock %}

{% block body %}

    <div class="container pt-5 mt-5">
        <div class="row">

            <section class="boutton">
                <div class="col-12 col-md-4">
                    <div class="btn-1">
                        <a  class="btn btn-lg btn-outline-warning"href="{{ path('profil.show') }}">Profil</a>
                    </div>
                    <div class="btn-1">
                        <a class="btn btn-lg btn-outline-warning" href="{{ path('profil.order.progress') }}">Commandes en cours</a>
                    </div>
                    <div class="btn-1">
                        <a class="btn btn-lg btn-outline-warning" href="{{ path('profil.order.delivered') }}">Commandes livrées</a>
                    </div>               
                </div>
            </section>
            
            <div class="col-12 col-md-9">
                <h3>Récapitulatif de votre commande | Total: {{orders[0].orders.priceTotal}}€</h3>

                <div class="row justify-content-around">
                    <div class="col-12 col-md-12">

                        {% for order in orders %}
                        <div class="row mb-4 shadow p-3 mb-5 bg-white rounded">

                            <div class="col-md-5 col-lg-3 col-xl-3 ">
                                <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                    <img class="img-fluid w-100" src="{{ asset('uploads/' ~ order.plats.image) }}" alt="{{ order.plats.name }}">
                                </div>
                            </div>

                            <div class="col-md-7 col-lg-9 col-xl-9">
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h5>{{ order.plats.name }}</h5>
                                            <p class="mb-3 text-muted text-uppercase small">{{ order.plats.price }} €</p>
                                            <a class="btn btn-sm btn-outline-warning" href="{{ path('cart.add', {id: order.plats.id}) }}" role="button">Recommander</a>
                                        </div>
                                        <span class="vertical-line"></span>
                                        <div>
                                            <h4>Récapitulatif : </h4>
                                            <p class="mb-3 text-muted text-uppercase small">Quantité : {{order.quantity}}</p>
                                            <p class="mb-3 text-muted text-uppercase small">Total : {{order.plats.price * order.quantity}}€</p>
                                            
                                        </div>
                                        <div>
                                            <a style="width:150px;" class="btn btn-sm btn-outline-warning" href="{{ path('profil.order.note', {order: order.orders.id ,plat: order.plats.id}) }}" role="button">Noter</a>                                                                                        
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                            
                        </div>                        
                        {% endfor %}
                        
                    </div>
                </div>
               
            </div>
            
        </div>
    </div>
            
{% endblock %}



