<!-- bootstrap link -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" ingrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous"/>

<div class="alert alert-success" role="alert">
  Merci de votre commande !
</div>

<div class="col-6 col-md-12">
    <div class="row">
        <div class="col-sm-2 col-md-6">
            <h4>Résumer de votre commande N° {{id}}</h4>
        </div>
        <div class="col-sm-4 col-md-6">
            <blockquote>
                <p> Total : {{ total }} </p><small><cite title="Source Title">{{ adress }}</cite></small><p>Date{{ time ? time|date('Y-m-d H:i:s') : '' }}</p>
            </blockquote>
        </div>
    </div>
    {% if items | length > 0 %}
    {% for item in items %}
    <div class="cart shadow p-3 mb-5 bg-white rounded">
        <div class="cart-content p-4">
            <div class="d-flex align-items-center">
                <div>Nom: {{ item.plat.name }}</div>
                <div><b>Quantité : {{item.quantity}}</b> </div>
                <div><b>Prix unitaire : {{ item.plat.price }} </b></div>
            </div>
        </div>
    </div>
    {% endfor %}
    {% endif %}
       
</div>