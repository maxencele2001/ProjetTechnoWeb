{% block body %}



<div class="container pt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <h1>Editer plat : {{plat.id}}</h1>
                {{ include('plat/_delete_form.html.twig') }}
            </div>
            
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Tableau de Bords</a></li>
                <li class="breadcrumb-item"><a href="{{ path('plat_index') }}">Liste des Plats</a></li>
                <li class="breadcrumb-item active">Editer plat {{plat.id}}</li>
            </ol>
            </div>
            
            <div class="col-12">
              <div class="cart">
                 {{ include('plat/_form.html.twig', {'button_label': 'Update'}) }}
              </div>
            </div>
            
        </div>
    </div>
</div>

