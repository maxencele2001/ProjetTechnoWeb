{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous"/>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="{{ asset('css/register.css') }}" />
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<header>{% include "nav.html.twig" %}</header>


<div class="container pt-3 mt-5">
        <div class="row">

            <div class="col-12 col-md-6">
                <h1>Créer un compte</h1>
                    <p class="login-welcome-message">
                        Bienvenue ! Inscrivez-vous dès maintenant<br/>
                    </p>

                <container>
                    {{ form_start(registrationForm) }}
                        <div class="d-flex justify-content-between">
                            {{ form_row(registrationForm.name, {
                                label: 'Nom','attr':{'class': 'form-control','placeholder' :'Nom'}
                            }) }}
                            {{ form_row(registrationForm.firstName, {
                                label: 'Prénom','attr':{'class': 'form-control','placeholder' :'Prénom'}
                            }) }}
                        </div>
                        {{ form_row(registrationForm.email,  {
                            label: 'Email','attr':{'class': 'form-control','placeholder' :'Votre Email'}
                        }) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password','attr':{'class': 'form-control','placeholder' :'Entrez votre Mot de Passe'}
                        }) }}
                                
                        {{ form_row(registrationForm.address, {
                            label: 'Adresse','attr':{'class': 'form-control','placeholder' :'Votre Adresse'}
                        }) }}
                        <div class="d-flex justify-content-between">
                            {{ form_row(registrationForm.postal_code, { 
                                label: 'Code Postal',
                                'attr':{'class': 'form-control','placeholder' :'Code Postal','type':'number',  'maxlength': '5'  }
                            }) }}
                            {{ form_row(registrationForm.city, {
                                label: 'Ville','attr':{'class': 'form-control','placeholder' :'Votre ville'}
                            }) }}
                        </div>
                                
                        {{ form_row(registrationForm.agreeTerms) }}

                        <button type="submit" class="btn">S'enregistrer</button>
                    {{ form_end(registrationForm) }}
                </container>
            </div>
            <div class="col-12 col-md-6">

                <div class="d-flex align-items-center login-illustration">
                        <img src="../img/registration.jpg">
                </div>
                
            </div>

        </div>
    </div>

{% endblock %}
