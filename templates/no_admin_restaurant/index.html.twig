{% extends 'base.html.twig' %}

{% block title %}Nos Restaurants{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/restaurantsList.css') }}" />
{% endblock %}

{% block body %}

    <main>
        <div class="container">

            {% for restaurant in restaurants %}

                <a class="btn" href="{{ path('restaurant.show', {id: restaurant.id}) }}" role="button">                    
                    <div class="content">
                        <div class="card">
                            <div class="firstinfo"><img src="{{ asset('uploads/' ~ restaurant.logo) }}"/>
                                <div class="profileinfo">
                                    <h1>{{ restaurant.name }}</h1>
                                    <h3>{{ restaurant.address }}, {{ restaurant.postalCode }} {{ restaurant.city }}</h3>
                                    <p class="bio">{{ restaurant.description|striptags|truncate(55, true)|raw }} </p>
                                </div>
                            </div>
                        </div>
                    </div>                
                </a>
                
            {% endfor %}

        </div>
    </main>

{% endblock %}
